<!-- Show Users Details/Dashboard show.html.erb -->
<br class="clear"/>
<h1 style="text-align:center" class="velotitle">User Dashboard</h1>
<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<div class="col-xs-5">
		<h4><%= @user.email %></h4>
	</div>
	<div class="col-xs-5" style="pull-right">
		<h3>Member Since: <%=@user.created_at.strftime("%B %d, %Y") %></h3>
		<br />
		<p>You have posted <%= @user.comments.count %> comnents.</p>
		<p>Including <%= @user.comments.where(:rating => '5_stars').count %> Five Star Review(s).</p>
	</div>
</div>
<br class="clear" /><br />
<% @user.inspect %> <!-- for troubleshooting -->